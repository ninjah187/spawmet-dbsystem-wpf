<Window x:Class="SpawmetDatabaseWPF.AddMachineModuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj moduł" SizeToContent="WidthAndHeight"
        Icon="icon2.ico">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Text="Nazwa:" FontWeight="DemiBold"></TextBlock>
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Right">
            <TextBox x:Name="NameTextBox" Margin="5,0" Width="200" GotFocus="TextBox_OnGotFocus"></TextBox>
            <Button Width="60" Margin="0,5" Click="AddButtonOnClick">Dodaj</Button>
        </StackPanel>
    </DockPanel>
</Window>
