<Window x:Class="SpawmetDatabaseWPF.CraftPartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wypal część" SizeToContent="WidthAndHeight"
        Icon="icon2.ico">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Text="Wypal: " Margin="0,0,0,10" FontWeight="DemiBold" />
            <TextBlock Text="Ilość: " FontWeight="DemiBold" />
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Right">
            <TextBlock x:Name="PartTextBlock" Text="Część" Margin="5,0,5,10" TextWrapping="Wrap" />
            <TextBox x:Name="AmountTextBox" Margin="5,0" />
            <Button Width="60" Margin="0,10" Click="ButtonBase_OnClick">Dodaj</Button>
        </StackPanel>
    </DockPanel>
</Window>
