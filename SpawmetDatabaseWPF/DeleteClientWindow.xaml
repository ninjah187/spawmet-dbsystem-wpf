<Window x:Class="SpawmetDatabaseWPF.DeleteClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuwanie klientów" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize"
        Icon="icon2.ico">
    <StackPanel>
        <TextBlock x:Name="TitleTextBlock" Text="Przygotowywanie operacji..." TextAlignment="Center" Margin="0,10"></TextBlock>
        <ProgressBar x:Name="DeleteProgressBar" MinWidth="300" Height="15" Margin="0,0,0,10"></ProgressBar>

        <DockPanel Margin="10,0,10,10">
            <TextBlock Text="Usunięto: " DockPanel.Dock="Left"></TextBlock>
            <TextBlock Text="0 z 0" x:Name="CounterTextBlock"></TextBlock>
        </DockPanel>
    </StackPanel>
</Window>
