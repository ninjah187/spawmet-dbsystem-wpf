<Window x:Class="SpawmetDatabaseWPF.AddPartToMachine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddPartToMachine" Height="300" Width="300" ResizeMode="CanMinimize"
        MaxWidth="300" MinWidth="300" MaxHeight="300" MinHeight="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="Dodaj część do "></TextBlock>
            <ListBox x:Name="MainListBox" DisplayMemberPath="Name" MaxHeight="150" DockPanel.Dock="Top"></ListBox>
            
            <DockPanel Margin="0,10,0,0">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Ilość:"></TextBlock>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right">
                    <TextBox x:Name="AmountTextBox" Margin="5,0,0,0"></TextBox>
                </StackPanel>
            </DockPanel>
            
            <Button x:Name="OkButton" Width="30" Height="30" DockPanel.Dock="Bottom" Margin="10" Click="OkButton_OnClick">OK</Button>
        </StackPanel>
    </DockPanel>
</Window>
