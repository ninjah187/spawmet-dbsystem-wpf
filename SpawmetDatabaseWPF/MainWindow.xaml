<Window x:Class="SpawmetDatabaseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640" ResizeMode="CanMinimize">
    <DockPanel>
        <!-- NAVBAR -->
        <DockPanel DockPanel.Dock="Top">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Przeglądaj">
                    <MenuItem Header="Części" Click="MenuItem_OnClick" />
                    
                </MenuItem>
            </Menu>
        </DockPanel>
        <DockPanel></DockPanel>
        <!-- END NAVBAR -->
        
        <DataGrid ItemsSource="{Binding DataGridItemsSource}" Margin="0,0,10,0" DockPanel.Dock="Left"
                  MaxWidth="480" MinWidth="480"></DataGrid>
        
        <StackPanel DockPanel.Dock="Right" Margin="0,10,10,10" Width="100">
            <Button Name="AddButton" Click="AddButton_OnClick">Dodaj</Button>
            <Button Name="EditButton" Margin="0,5">Edytuj</Button>
            <Button Name="DeleteButton">Usuń</Button>
        </StackPanel>
    </DockPanel>
</Window>
