<Window x:Class="SpawmetDatabaseWPF.AddDeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddDeliveryWindow" Height="170" Width="300"
        Icon="icon.ico">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Text="Nazwa: " FontWeight="DemiBold" Margin="0,10"></TextBlock>
            <TextBlock Text="Data: " FontWeight="DemiBold" Margin="0,6"></TextBlock>
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Right">
            <TextBox x:Name="NameTextBox" Margin="5,10" />
            <DatePicker x:Name="StartDatePicker" Margin="5,0" IsTodayHighlighted="True"></DatePicker>
            <Button Width="60" Click="ButtonBase_OnClick" Margin="0,10">Dodaj</Button>
        </StackPanel>
        
    </DockPanel>
</Window>
