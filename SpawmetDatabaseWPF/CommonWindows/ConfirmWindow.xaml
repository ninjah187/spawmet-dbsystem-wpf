<Window x:Class="SpawmetDatabaseWPF.CommonWindows.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info" Width="250" SizeToContent="Height" ResizeMode="NoResize"
        Icon="../icon2.ico">
    <StackPanel>
        <TextBlock x:Name="MessageTextBlock" DockPanel.Dock="Top" Text="Question?" Margin="10" TextAlignment="Center"
                   TextWrapping="Wrap" />
        
        <Grid Margin="40,0,40,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button x:Name="ConfirmButton" Grid.Column="0" Width="40" Height="25"
                    Click="ConfirmButton_OnClick">Tak</Button>
            <Button x:Name="DeclineButton" Grid.Column="1" Width="40" Height="25"
                    Click="DeclineButton_OnClick">Nie</Button>
        </Grid>
    </StackPanel>
</Window>
