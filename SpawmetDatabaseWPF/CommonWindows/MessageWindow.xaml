<Window x:Class="SpawmetDatabaseWPF.CommonWindows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info" Width="250" SizeToContent="Height" ResizeMode="NoResize"
        Icon="../icon2.ico">
    <StackPanel>
        <TextBlock x:Name="MessageTextBlock"
            Text="Message content." Margin="10" TextAlignment="Center" TextWrapping="Wrap" />
        <Button x:Name="ConfirmButton" Width="40" Height="25" Margin="10,0,10,10">Ok</Button>
    </StackPanel>
</Window>
