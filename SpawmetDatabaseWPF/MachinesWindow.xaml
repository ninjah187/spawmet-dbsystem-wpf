<Window x:Class="SpawmetDatabaseWPF.MachinesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:custns="clr-namespace:SpawmetDatabase.Model;assembly=SpawmetDatabase"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:SpawmetDatabaseWPF.ViewModel"
        Title="Maszyny" Height="480" Width="800" ResizeMode="CanMinimize"
        Icon="icon.ico">
    
    <!--<Window.DataContext>
        <vm:MachinesWindowViewModel />    
    </Window.DataContext>-->
    
    <DockPanel>
        
        <!-- NAVBAR -->
        <DockPanel DockPanel.Dock="Top">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Tabele">
                    <MenuItem Header="Maszyny" IsEnabled="False"></MenuItem>
                    <MenuItem Header="Części" Command="{Binding NewPartsWindowCommand}"></MenuItem>
                    <MenuItem Header="Zamówienia" Command="{Binding NewOrdersWindowCommand}"></MenuItem>
                    <MenuItem Header="Klienci" Command="{Binding NewClientsWindowCommand}"></MenuItem>
                    <MenuItem Header="Dostawy" Command="{Binding NewDeliveriesWindowCommand}"></MenuItem>
                </MenuItem>
                <MenuItem Header="Opcje">
                    <MenuItem x:Name="ConnectMenuItem" Header="Połącz"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <DockPanel></DockPanel>
        <!-- END NAVBAR -->

        <DataGrid x:Name="MainDataGrid" 
                  ItemsSource="{Binding Machines, Mode=TwoWay}" SelectedItem="{Binding SelectedMachine}"
                  Margin="0,0,10,0" DockPanel.Dock="Left" MaxWidth="510" MinWidth="510"
                  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="AddContextMenuItem" Header="Dodaj" Command="{Binding AddMachineCommand}"></MenuItem>
                    <MenuItem x:Name="DeleteContextMenuItem" Header="Usuń" Command="{Binding DeleteMachinesCommand}"></MenuItem>
                    <MenuItem Header="Zapisz">
                        <MenuItem Header="Stan bazy" Command="{Binding SaveDbStateCommand}"></MenuItem>
                        <MenuItem Header="Do pliku" Command="{Binding SaveToFileCommand}"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="Odśwież" Command="{Binding RefreshCommand}"></MenuItem>
                    <MenuItem Header="Drukuj" Command="{Binding PrintDialogCommand}"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id, Mode=OneWay}" IsReadOnly="True" Width="SizeToCells" />
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="SizeToCells" />
                <DataGridTextColumn Header="Cena" Binding="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="SizeToCells" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel DockPanel.Dock="Right" Margin="0,10,10,10" Width="250">
            <!--<ScrollViewer MinHeight="400" MaxHeight="400">-->
                <StackPanel Margin="0" x:Name="DetailsStackPanel">
                    <StackPanel Height="50">
                        <ScrollViewer MaxHeight="50">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="ID: " FontWeight="DemiBold" DockPanel.Dock="Left" />
                                    <TextBlock x:Name="IdTextBlock" TextAlignment="Right" TextWrapping="Wrap" DockPanel.Dock="Right" Margin="10,0" />
                                </DockPanel>
                            <DockPanel>
                                <TextBlock Text="Nazwa: " FontWeight="DemiBold" DockPanel.Dock="Left" />
                                <TextBlock x:Name="NameTextBlock" TextAlignment="Right" TextWrapping="Wrap" DockPanel.Dock="Right" Margin="10,0" />
                            </DockPanel>
                            <DockPanel>
                                <TextBlock Text="Cena: " FontWeight="DemiBold" DockPanel.Dock="Left" />
                                <TextBlock x:Name="PriceTextBlock" TextAlignment="Right" TextWrapping="Wrap" DockPanel.Dock="Right" Margin="10,0" />
                            </DockPanel>
                        </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                    <!--<DockPanel>
                        <ScrollViewer>
                            <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="ID: " FontWeight="DemiBold"></TextBlock>
                            <TextBlock Text="Nazwa: " FontWeight="DemiBold"></TextBlock>
                            <TextBlock Text="Cena: " FontWeight="DemiBold"></TextBlock>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Right" Margin="0,0,10,0">
                            <TextBlock x:Name="IdTextBlock" TextAlignment="Right" TextWrapping="Wrap"></TextBlock>
                            <TextBlock x:Name="NameTextBlock" TextAlignment="Right" TextWrapping="Wrap"></TextBlock>
                            <TextBlock x:Name="PriceTextBlock" TextAlignment="Right" TextWrapping="Wrap"></TextBlock>
                        </StackPanel>
                        </DockPanel>
                    </ScrollViewer>
                </DockPanel>-->
                <TextBlock x:Name="StandardPartsTextBlock" Text="Standardowe części:" FontWeight="DemiBold"></TextBlock>
                    <DataGrid x:Name="StandardPartSetDataGrid" MinHeight="195" MaxHeight="195" AutoGenerateColumns="False"
                              ItemsSource="{Binding StandardPartSet}" SelectedItem="{Binding SelectedPartSetElement}" CanUserAddRows="False">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Dodaj" Command="{Binding AddPartToMachineCommand}"></MenuItem>
                                <MenuItem Header="Usuń" Command="{Binding DeletePartFromMachineCommand}"></MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="StandardPartSetPartNameColumn" Header="Część" Binding="{Binding Part.Name}" IsReadOnly="True" Width="SizeToCells" />
                            <DataGridTextColumn x:Name="StandardPartSetAmountColumn" Header="Ilość" Binding="{Binding Amount}" IsReadOnly="True" Width="SizeToCells" />
                            <DataGridTemplateColumn Header="Wypalanie">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding RelativeSource={RelativeSource FindAncestor,
                                            AncestorType={x:Type Window}}, Path=DataContext.CraftPartCommand}">Wypal</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ProgressBar x:Name="StandardPartSetProgressBar" Height="5"></ProgressBar>
                <TextBlock Text="Zamówienia:" FontWeight="DemiBold"></TextBlock>
                    <ListBox x:Name="OrdersListBox" DisplayMemberPath="Signature"
                             ItemsSource="{Binding Orders}" Height="115"></ListBox>
                    <ProgressBar x:Name="OrdersProgressBar" Height="5"></ProgressBar>
                </StackPanel>
            <!--</ScrollViewer>-->
        </StackPanel>

    </DockPanel>
</Window>
