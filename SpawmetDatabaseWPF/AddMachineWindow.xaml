<Window x:Class="SpawmetDatabaseWPF.AddMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj maszynę" Height="150" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Text="Nazwa:"></TextBlock>
            <TextBlock Text="Cena:" Margin="0, 10"></TextBlock>
        </StackPanel>

        <StackPanel DockPanel.Dock="Right">
            <TextBox x:Name="NameTextBox" Margin="5,0"></TextBox>
            <TextBox x:Name="PriceTextBox" Text="0" Margin="5,5"></TextBox>
            <Button Width="60" Click="ButtonBase_OnClick" Margin="0,10">Dodaj</Button>
        </StackPanel>
    </DockPanel>
</Window>
