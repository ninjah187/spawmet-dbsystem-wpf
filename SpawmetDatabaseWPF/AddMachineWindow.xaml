<Window x:Class="SpawmetDatabaseWPF.AddMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj maszynę" Height="105" Width="300"
        Icon="icon2.ico">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Text="Nazwa:" FontWeight="DemiBold"></TextBlock>
        </StackPanel>

        <StackPanel DockPanel.Dock="Right">
            <TextBox x:Name="NameTextBox" Margin="5,0"></TextBox>
            <Button Width="60" Click="ButtonBase_OnClick" Margin="0,5">Dodaj</Button>
        </StackPanel>
    </DockPanel>
</Window>
